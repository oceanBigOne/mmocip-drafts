            <div class="col-sm-4 text-center">
                {%  if debat.id > 0 %}
                    <button type="button" class="btn btn-block btn-danger mt-5" data-jsbind="confirm-delete" data-jsbind-param='{"id":{{ debat.id }},"model":"debat"}' >{%  trans %}Supprimer{%  endtrans %}</button>
                {% endif %}</div>
            <div class="col-sm-4 text-center"><button type="submit" class="btn btn-block btn-primary  float-sm-right mt-5">{%  trans %}Valider{%  endtrans %}</button></div>

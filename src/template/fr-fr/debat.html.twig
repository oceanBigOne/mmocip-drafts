{% extends "fr-fr/base.html.twig" %}

{% block stylesheets %}{{ parent() }}{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>{% trans %}DÃ©bat{%  endtrans %}</h1>
    <form action="{{  getPathOf('DebatSave',{'extension':'json' }) }}" method="post" data-jsbind="ajax" >
        <input type="hidden" id="id" name="id" value="{{  debat.id }}" >
        <input type="hidden" id="delete" name="delete" value="false" >
        <div class="form-group">
            <label for="title">{%  trans %}Titre{%  endtrans %}</label>

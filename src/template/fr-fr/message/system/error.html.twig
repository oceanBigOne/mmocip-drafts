<div class="modal fade" id="{{ modal_id }}" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >{% trans %}Erreur système{% endtrans %}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><b>{% trans %}Le système à rencontré un problème.{% endtrans %}</b></p>

                <p>{% trans %}Détail de l'erreur :{% endtrans %}</p>
                <div style="overflow-y: scroll;height:200px;border:2px dashed #999999;padding:10px;background-color: #ffffff;">
                {{ content|raw }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <!-- <button type="button" class="btn btn-primary">Ok</button>-->
            </div>
        </div>
    </div>
</div>